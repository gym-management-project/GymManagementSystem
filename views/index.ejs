<%- include("partials/header"); -%>
  <div id="container">
  <h1>BMI Calculator</h1>
  <div id="calculator">



          <p>Select your GENDER</p>
            <p>
              <select id="GENDER">
            <option disabled selected value="0">-- Choose an Option --</option>
            <option value="0.3"><i class="fas fa-mars"></i>Male</option>
            <option value="0.2"><i class="fas fa-mars"></i>Female</option>
        </select>
        <form>
          <p>How much do you weigh?
            <p>
              <input id="w" type="text" placeholder="Your weight">kg


    </form>
    <p>How tall are you?</p>
    <input id="h" type="text" placeholder="Your height">cms
    <button type="button" id="calculate">Calculate!</button>

  </div>

  <div id="result">
    <sup></sup><span id="bmi">0.00</span>
    <small id="each"></small>
  </div>


</div>


