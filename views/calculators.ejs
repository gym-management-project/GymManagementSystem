<%- include("partials/header"); -%>

<div class="buttons">
	<button id="btn" class="choose" onClick="showcal()">Calorie Calculate</button>
	<button id="btn" class="choose" onClick="showbmi()">BMI Calculate</button>
</div>
<div class="divCAL" id="bmi">

			<h2 class="typeCal">BMI Calculator</h2>
			<p class="text">Height</p>
			<input type="text" id="h">
			<p class="text">Weight</p>
			<input type="text" id="w">
			<p id="result"></p>
			<button id="btn" onClick="BMI()">Calculate</button>
			<p id="info">Please enter height [cm] and weight [kg]</p>

		</div>
		<div class="">
			<div class="divCAL" hidden id="cal">
	<table id ='tab' align='center' cellspacing='0' cellpadding='0' style="width:100%;">
	<tr><td align=center><br><h2 class="typeCal"><b>Calorie Calculator</b></h2><br><br>
	<form name="frm" action="" class='frms noborders'>
		<table>
			<tr><td style="color: #212121; font-size:16px;">Age:</td>
				<td><input type="text" placeholder="Enter your age" name="age" id="age" align="left" size="3" maxlength="2" onkeypress="return cknum(event,age)"></td>
				<td><font color="#212121" size="3.7">years</font></td></tr>
				<tr><td style="color: #212121; font-size:16px;">Gender:</td>
					<td><input type="radio" name="gen" id="gen" checked><font color="#212121" size="3.7">Male</font>

						<input type="radio" name="gen" id="gen"><font color="#212121" size="3.7">Female</font></td></tr>
						<tr><td style="color: #212121; font-size:16px;">Height:</td>
							<td><select style='width:50%;' name="foot" id="foot" onchange="hcon()">
								<option value="1">1'</option>
								<option value="2">2'</option>
								<option value="3">3'</option>
								<option value="4">4'</option>
								<option value="5">5'</option>
								<option value="6">6'</option>
								<option value="7">7'</option>
							</select>
							<select style='width:40%;'name="inch" id="inch" onchange="hcon()">
								<option value="1">1"</option>
								<option value="2">2"</option>
								<option value="3">3"</option>
								<option value="4">4"</option>
								<option value="5">5"</option>
								<option value="6">6"</option>
								<option value="7">7"</option>
								<option value="8">8"</option>
								<option value="9">9"</option>
								<option value="10">10"</option>
								<option value="11">11"</option>
							</select>
						</td></tr>
						<tr><td style="color: #212121; font-size:16px;">Cms :</td>
							<td><input placeholder="Height" type="text" name="cen" id="cen" size="4" onkeyup="con(cen)">
							</td></tr>
							<tr><td style="color: #212121; font-size:16px;">Weight:</td>
								<td>
									<input placeholder="Weight" type="text" name="weight" id="weight" maxlength="3" size="3" onkeyup="isNumberKey(this.id)"></td>
									<td>
										<select name="wtype" id="wtype">
											<option value="kg">Kg</option>
											<option value="pounds">Pounds</option>
										</select>
									</td></tr>
									<tr><td style="color: #212121; font-size:16px;">Activeness:</td>
										<td><select style='width:100px;' name="loa" id="loa">
											<option value="1">Sedentary</option>
											<option value="2">Light Active</option>
											<option value="3">Moderately Active</option>
											<option value="4">Very Active</option>
											<option value="5">Extra Active</option>
										</select>
									</td></tr>
									<tr><td colspan='2' align="center"><input id="btn" class='blue_button' type="button" value="Calculate The Calorie" onclick="cc()">
										<span id="dumdiv" align="center" style=" font-size: 10px;color: #dadada;">
										</span></td></tr></table></form>
	<br><table align="center" border="0" class="frms noborders">
		<caption><b>Calorie Result</b></caption>
		<tr>
			<td align="right" style="color: #212121; font-size:16px;">Calorie Needed:</td>
			<td><input type="text" id="rc" style="font-size:16px;" size="15" readonly></td>
			<td><select name="caltype" id="caltype" onChange="convert()">
				<option value="g">Grams</option>
				<option value="kg">Kilograms</option>
				<option value="pounds">Pounds</option>
			</select>
		</td></tr>
	</table>

	<table class="frms noborders">
		<tr><td style="color: #212121; font-size:16px;">Fat:</td>
			<td style="color: #212121; font-size:16px;">
				<input type="text" id="rf" style="font-size:16px;" size="10" readonly></td>
				<td><font color="#212121" size="2" style='float:right'>
					<label id="l1"></label> per day</font>
				</td></tr>
				<tr><td style="color: #212121; font-size:16px;">Protein:</td>
					<td style="color: #212121; font-size:16px;">
						<input type="text" id="rp" style="font-size:16px;" size="10" readonly></td>
						<td><font color="#212121" size="2" style='float:right'>
							<label id="l2"></label> per day</font>
						</td></tr>
						<tr><td style="color: #212121; font-size:16px;">Carbohydrate:</td>
							<td style="color: #212121; font-size:16px;">
								<input type="text" id="rh" style="font-size:16px;" size="10" readonly></td>
								<td><font color="#212121" size="2" style='float:right'>
									<label id="l3"></label> per day</font>
								</td></tr>
								<tr><td style="color: #212121; font-size:16px;">Alcohol:</td>
									<td style="color: #212121; font-size:16px;">
										<input type="text" id="ra" style="font-size:16px;" size="10" readonly>
									</td>
									<td><font color="#212121" size="2" style='float:right'>
										<label id="l4"></label> per day</font>
									</td></tr></table>
	</td></tr>
	</table>
	</div>	</div>






	<%- include("partials/footer"); -%>
